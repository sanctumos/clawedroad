# Example Nginx server block for MVP marketplace (LEMP).
# Document root = public/ (synced folder). PHP-FPM handles .php.
# Copy and adapt. Only public/ and db/ sync to LEMP.

server {
    listen 80;
    server_name localhost;
    root /path/to/store/public;

    index index.php;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~ \.php$ {
        fastcgi_pass unix:/run/php/php-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        include fastcgi_params;
        fastcgi_param PHP_VALUE "env_path=/path/to/store/app/.env";
    }

    location ~ /\. {
        deny all;
    }
}
